@model EmployeeModel;
@{
    ViewData["Title"] = "Изменить сотрудника";
}
<div class="text-center">
<h2>Изменить сотрудника</h2>
    <div style="display: flex;
        justify-content: center;">
        <div style="width: 60%;">
            <form id="EditEmployeeForm" asp-action="EditEmployeeMethod" asp-controller="Home" method="post" asp-antiforgery="true">
                @* текст ошибки валидации *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <div class="form-group">
                    <label for="name">Имя</label>
                    <div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <input type="text" id="name" asp-for="Name" class="form-control" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <label for="surname">Фамилия</label>
                    <div>
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <input asp-for="Surname" id="surname" class="form-control" value="@Model.Surname" />
                </div>
                <div class="form-group">
                    <label for="phonenumber">Номер телефона</label>
                    <div>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <input asp-for="Phone" id="phonenumber" class="form-control" value="@Model.Phone" />
                </div>
                <div class="form-group">
                    @*комбо бокс для выбора компаний*@
                    <label for="companyid">Выберете компанию</label>
                    <div>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>
                    <div class="select">
                        <select asp-for="CompanyId" id="companyid" asp-items="Model.Companies" class="form-control">
                            <option value=""></option>
                        </select>
                    </div>

                </div>
                <div class="form-group">
                    @*комбо бокс для выбора типа паспорта*@
                    <label>Выберете тип паспорта</label>
                    <div>
                        <span asp-validation-for="PassportType" class="text-danger"></span>
                    </div>
                    <div class="select">
                        <select asp-for="PassportType" asp-items="Model.Passports" class="form-control">
                            <option value=""></option>
                        </select>
                    </div>

                </div>
                <div class="form-group">
                    <label for="passport">Номер паспорта</label>
                    <div>
                        <span asp-validation-for="PassportNumber" class="text-danger"></span>
                    </div>
                    <input asp-for="PassportNumber" id="passport" class="form-control" value="@Model.PassportNumber" />
                </div>
                <div class="form-group">
                    @*комбо бокс для выбора департамента*@
                    <label for="department">Выберете департамент</label>
                    <div>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                    <div class="select">
                        <select asp-for="DepartmentId" id="department" asp-items="@Model.Departments" class="form-control">
                            <option value=""></option>
                        </select>
                    </div>
                </div>
            </form>
            <div class="form-submit">
                <a class="btn btn-primary" href="#" onclick="document.getElementById('EditEmployeeForm').submit()"
                   style="margin-top: 20px;">Изменить</a>
            </div>
        </div>
    </div>
</div>
<style>

    select::-ms-expand {
        display: none;
    }

    .select {
        position: relative;
        display: flex;
        height: 3em;
        line-height: 3;
        background: #5c6664;
        overflow: hidden;
        border-radius: .25em;
    }

        .select::after {
            content: '\25BC';
            position: absolute;
            top: 0;
            right: 0;
            padding: 0 1em;
            background: #0d6efd;
            cursor: pointer;
            pointer-events: none;
            transition: .25s all ease;
        }

        .select:hover::after {
            color: white;
        }
</style>